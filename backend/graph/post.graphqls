scalar Upload
scalar Byte
scalar Time

input NewPost {
  text: String!
  user_id: String!
  attachment_link: String!
  hashtag: [String!]!
}

type Post {
  id: ID!
  text: String!
  AttachmentLink: String!
  User: User!
  likes: Int!
  sends: Int!
  comments: Int!
  createdAt: Time!
  hashtag: [String!]!
}

extend type Query {
  post(id: String!): Post!
  posts: [Post!]!
  postInfinity(limit: Int!, offset: Int!): [Post!]!
  getAllHashtag: [String!]!
}

extend type Mutation {
  sendPost(id: String!): String!
  likePost(id: String!): String!
  # createPost(input: NewPost!, file: Upload!): String!
  createPost(input: NewPost!): String!
}
